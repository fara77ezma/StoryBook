

{{#if  msg}}
  <div class="row">
    <div class="input-field warning">
      <span class="icon">⚠️</span>
      <span class="message">{{msg}}</span>
    </div>
  </div>
{{/if}}
{{#if  sucessmsg}}
  <div class="success-message">
    <div class="success-icon">✔️</div>
    <div class="success-text">{{sucessmsg}}</div>
  </div>
{{/if}}
<form action="/newpassword" method="POST" class="col s12">

  <input type="hidden" name="id" value="{{userId}}">
    <div class="row">
        <div class="input-field">
            <input type="password" id="email" name="password" value="">
            <label for="title">New Password</label>
        </div>
    </div>
    <div class="row">
        <div class="input-field">
            <input type="password" id="email" name="password2" value="">
            <label for="title">Confirm Password</label>
        </div>
    </div>
    <input type="submit" value="Next" class="btn">

</form>
