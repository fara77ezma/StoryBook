{{#if story.user}}
<div class="row">
    <div class="col s12 m8">
        <h3>{{story.title}}
            <small>{{{editIcon story.user user story._id false}}}</small>
        </h3>
        <div class="card story">
            <div class="card-content">
                <span class="card-title">{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</span>
                {{{story.body}}}
            </div>
        </div>
    </div>
    {{else}}
    <div class="row">
        <div class="col s12 m8">
            <h3>{{story.title}}
                <small>{{{editIcon story.localuser localuser story._id false}}}</small>
            </h3>
            <div class="card story">
                <div class="card-content">
                    <span class="card-title">{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</span>
                    {{{story.body}}}
                </div>
            </div>
        </div>
    {{/if}}
    {{#if story.user}}

    <div class="col s12 m4">
    <div class="card center-align refined-bio-card">
        <div class="card-content">
            <span class="card-title">{{story.user.displayName}}</span>
            <img src="{{getImageUrl story.user.image.data}}" class="circle responsive-img img-medium refined-profile-pic">
            <h4>Bio</h4>
            <p class="refined-bio-text">{{stripTags (truncate story.user.bio)}}</p>
        </div>
        <div class="card-action">
            <a href="/stories/user/{{story.user._id}}">More From {{story.user.firstName}}</a>
        </div>
    </div>
</div>
    {{else}}
    <div class="col s12 m4">
    <div class="card center-align refined-bio-card">
        <div class="card-content">
            <span class="card-title">{{story.localuser.displayName}}</span>
            <img src="{{getImageUrl story.localuser.image.data}}" class="circle responsive-img img-medium refined-profile-pic">
            <h4>Bio</h4>
            <p class="refined-bio-text">{{stripTags (truncate story.localuser.bio)}}</p>
        </div>
        <div class="card-action">
            <a href="/stories/user/{{story.localuser._id}}">More From {{story.localuser.firstName}}</a>
        </div>
    </div>
</div>
    {{/if}}

        </div>
    </div>
