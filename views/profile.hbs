{{#if msg}}
  <div class="row">
    <div class="input-field warning">
      <span class="icon">⚠️</span>
      <span class="message">{{msg}}</span>
    </div>
  </div>
{{/if}}

{{#if sucessmsg}}
  <div class="success-message">
    <div class="success-icon">✔️</div>
    <div class="success-text">{{sucessmsg}}</div>
  </div>
{{/if}}

